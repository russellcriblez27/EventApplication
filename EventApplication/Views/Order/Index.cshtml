@model EventApplication.Models.ViewModels.OrderCartViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Date Ordered
        </th>
        <th>
            Number of Tickets
        </th>
        <th>
            Order Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>
                @item.events.Title
            </td>
            <td>
                @item.DateOrdered
            </td>
            <td>
                @item.NumberOfTickets
            </td>
            <td>
                @item.status
            </td>
            <td></td>
            
        </tr>
    }

</table>